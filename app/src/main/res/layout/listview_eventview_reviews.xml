<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"><!--
    android:background="@drawable/border_top_bottom"-->

    <TextView
        android:id="@+id/eventView_Reviews_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Name of User"
        android:textColor="@color/bg_register"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/eventView_Reviews_Stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/eventView_Reviews_Username"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/star0" />

    <TextView
        android:id="@+id/eventView_Reviews_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eventView_Reviews_Username"
        android:layout_below="@+id/eventView_Reviews_Stars"
        android:layout_marginTop="10dp"
        android:text="User review description" />

    <TextView
        android:id="@+id/eventView_Reviews_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/eventView_Reviews_Stars"
        android:layout_below="@+id/eventView_Reviews_Description"
        android:text="MM/DD/YYYY" />
</RelativeLayout>