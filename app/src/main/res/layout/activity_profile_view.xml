<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header_cover_im"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/profile_view_header_cover_im"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:src="@color/colorPrimary" />

            <ImageButton
                android:id="@+id/button_Close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Profile Name"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />


        <LinearLayout
            android:id="@+id/Layout_UserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/header_cover_im"
            android:backgroundTint="@color/colorPrimaryDark"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/textview_ProfileUpdate_Label_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:clickable="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="Name :"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textview_ProfileView_Data_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textview_ProfileUpdate_Label_Name"
                    android:layout_toRightOf="@+id/textview_ProfileUpdate_Label_Name"
                    android:clickable="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="FirstName LastName"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/textview_ProfileUpdate_Label_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:clickable="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="Address :"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textview_ProfileView_Data_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textview_ProfileUpdate_Label_Address"
                    android:layout_toRightOf="@+id/textview_ProfileUpdate_Label_Address"
                    android:clickable="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="AddressLine 1,\nAddressLine 2, \nState, Country"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/textview_ProfileUpdate_Label_DOB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:clickable="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="Birthdate :"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textview_ProfileView_Data_DOB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textview_ProfileUpdate_Label_DOB"
                    android:layout_toRightOf="@+id/textview_ProfileUpdate_Label_DOB"
                    android:clickable="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="MM/DD/YYYY"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/textview_ProfileUpdate_Label_Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:clickable="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="Gender :"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textview_ProfileView_Data_Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textview_ProfileUpdate_Label_Gender"
                    android:layout_toRightOf="@+id/textview_ProfileUpdate_Label_Gender"
                    android:clickable="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="Gender"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_ProfileView_Label_AboutMe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:clickable="true"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="5dp"
                        android:paddingTop="15dp"
                        android:text="About me : "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textview_ProfileView_Data_AboutMe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:paddingBottom="15dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:text="Abc defghij klmnop qrstuv wxyz. Abc defghij klmnop qrstuv wxyz. Abc defghij klmnop qrstuv wxyz. Abc defghij klmnop qrstuv wxyz."
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#fff"
                android:elevation="4dp">

                <Button
                    android:id="@+id/button_ChangeProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:text="Change Info" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/add_friend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/user_profile_photo"
            android:layout_alignEnd="@+id/user_profile_photo"
            android:src="@android:drawable/ic_menu_edit" />

    </RelativeLayout>
</ScrollView>